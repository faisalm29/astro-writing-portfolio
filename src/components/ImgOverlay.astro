---
import { Image } from "astro:assets";
import { lazy } from "astro:schema";

interface Props {
  src: ImageMetadata;
  alt: string;
  category: string;
  title: string;
  w?: number;
  h?: number;
  layout?: "fixed" | "full-width" | "none" | "responsive";
  fit?: "contain" | "cover" | "fill" | "none" | "scale-down";
}

const { src, alt, category, title, w, h, layout, fit } = Astro.props;
---

<div class="relative mb-16 last:mb-0 md:mb-24 lg:col-span-6 lg:mb-0">
  <Image
    src={src}
    alt={alt}
    class="brightness-50"
    width={w}
    height={h}
    layout={layout}
    fit={fit}
  />
  <div
    class="text-invert absolute left-1/2 top-1/2 z-10 m-0 w-full -translate-x-1/2 -translate-y-1/2 px-[5vw] text-center"
  >
    <p class="uppercase tracking-[0.08em]">{category}</p>
    <h3 class="font-serif text-md font-light italic md:text-lg">
      {title}
    </h3>
  </div>
</div>
