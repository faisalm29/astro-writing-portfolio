---
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "@layouts/BaseLayout.astro";
import Prose from "@components/Prose.astro";

export async function getStaticPaths() {
  const campaigns = await getCollection("campaign", ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return campaigns.map((campaign) => ({
    params: {
      id: campaign.id,
    },
    props: {
      campaign,
    },
  }));
}

const { campaign } = Astro.props;
const { Content } = await render(campaign);
---

<BaseLayout
  title={campaign.data.title}
  description={campaign.data.description}
  ogImg={campaign.data.thumbnail.src}
>
  <article class="px-[5vw] mt-32 mb-32 md:mb-48 lg:mb-64">
    <div class="mb-12">
      <div class="mb-12">
        <p class="uppercase tracking-[0.08em] text-center">
          fundraising campaign
        </p>
        <h1 class="text-3xl font-bold mb-2 text-center">
          {campaign.data.title}
        </h1>
        <div class="flex justify-center">
          <time class="font-serif italic"
            >{
              new Date(campaign.data.publishedDate).toLocaleDateString(
                "en-US",
                {
                  day: "numeric",
                  month: "long",
                  year: "numeric",
                }
              )
            }</time
          >
        </div>
      </div>

      <div class="flex justify-center">
        <Image
          src={campaign.data.thumbnail}
          alt={`${campaign.data.title} thumbnail`}
          width="500"
          height="250"
        />
      </div>
    </div>

    <Prose>
      <Content />
    </Prose>
  </article>
</BaseLayout>
